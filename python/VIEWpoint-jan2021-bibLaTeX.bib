	number = {32},
	journaltitle = {Proceedings of the National Academy of Sciences},
	shortjournal = {{PNAS}},
	author = {{McCoy}, Isabel L. and {McCoy}, Daniel T. and Wood, Robert and Regayre, Leighton and Watson-Parris, Duncan and Grosvenor, Daniel P. and Mulcahy, Jane P. and Hu, Yongxiang and Bender, Frida A.-M. and Field, Paul R. and Carslaw, Kenneth S. and Gordon, Hamish},
	urldate = {2021-01-05},
	date = {2020-08-11},
	langid = {english},
	pmid = {32719114},
	note = {Publisher: National Academy of Sciences
Section: Physical Sciences},
	keywords = {Air quality, radiative forcing, Precipitation and flooding, long-term risks, aerosol−cloud interactions, cloud droplet number concentration, remote sensing, Southern Ocean},
	file = {Snapshot:C\:\\Users\\xy904282\\Zotero\\storage\\83JEZLMT\\18998.html:text/html;Full Text PDF:C\:\\Users\\xy904282\\Zotero\\storage\\NNUSEZ35\\McCoy et al. - 2020 - The hemispheric contrast in cloud microphysical pr.pdf:application/pdf},
}

