	author = {Liu, Heng and Liu, Xiaodong and Dong, Buwen},
	urldate = {2020-06-23},
	date = {2017-09-01},
	langid = {english},
	keywords = {Precipitation and flooding, North Atlantic Oscillation, Intraseasonal variability, Statistical analysis, Topographic precipitation, Westerly circulation},
	file = {Accepted Version:C\:\\Users\\xy904282\\Zotero\\storage\\J2UEL5T4\\Liu et al. - 2017 - Intraseasonal variability of winter precipitation .pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\xy904282\\Zotero\\storage\\7XC6C2S6\\S0377026517300143.html:text/html},
