	journaltitle = {Atmospheric Environment},
	shortjournal = {Atmospheric Environment},
	author = {Warren, Elliott and Charlton-Perez, Cristina and Kotthaus, Simone and Lean, Humphrey and Ballard, Sue and Hopkin, Emma and Grimmond, Sue},
	urldate = {2020-06-22},
	date = {2018-10-01},
