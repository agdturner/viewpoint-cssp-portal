	journaltitle = {Environmental Research Communications},
	shortjournal = {Environ. Res. Commun.},
	author = {Bett, Philip E. and Williams, Karina E. and Burton, Chantelle and Scaife, Adam A. and Wiltshire, Andrew J. and Gilham, Richard},
	urldate = {2020-06-15},
	date = {2020-05},
	langid = {english},
